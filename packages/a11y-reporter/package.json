{
  "name": "@techsio/storybook-a11y-reporter",
  "version": "0.0.8",
  "description": "Storybook a11y reporter with APCA support for CI/CLI",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/NMIT-WR/storybook-addons",
    "directory": "packages/a11y-reporter"
  },
